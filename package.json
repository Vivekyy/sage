{
  "name": "sage",
  "version": "1.0.0",
  "description": "Sage Flashcards and Web Blocker Tool",
  "scripts": {
    "start": "node build.js && parcel watch src/manifest.json --host localhost",
    "build": "node build.js && parcel build src/manifest.json",
    "clean": "rimraf dist",
    "start:firefox": "yarn install && yarn build && web-ext run --firefox=firefoxdeveloperedition",
    "start:chrome": "yarn install && yarn build && web-ext run --target=chromium",
    "format": "prettier --write ./src"
  },
  "repository": "https://github.com/Vivekyy/sage.git",
  "author": "Vivek Yanamadula <vivekyanamadula@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "bulma": "^0.9.4",
    "typescript": "^5.4.2"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.12.0",
    "@parcel/core": "^2.12.0",
    "@types/chrome": "^0.0.263",
    "@types/firefox-webext-browser": "^120.0.3",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "parcel": "^2.12.0",
    "parcel-reporter-clean-dist": "^1.0.4",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "web-ext": "^7.11.0"
  },
  "staticFiles": {
    "staticPath": "src/static",
    "staticOutPath": "static",
    "watcherGlob": "**"
  }
}
