{
  "manifest_version": 3,
  "name": "Sage",
  "version": "1.0.0",
  "description": "Sage Web Blocker Tool",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    },
    "default_title": "Sage",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["scripts/background.ts"],
    "persistent": true
  },
  "options_ui": {
    "page": "login.html",
    "browser_style": false,
    "chrome_style": false,
    "open_in_tab": true
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "downloads",
    "storage",
    "webNavigation"
  ],
  "web_accessible_resources": ["block.html"]
}
